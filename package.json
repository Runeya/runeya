{
  "name": "@clabroche/stackmonitor",
  "version": "1.0.0",
  "description": "",
  "main": "stack.js",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install && node prepare-monorepo.js || true",
    "serve:v2": "cd v2/dev/stack && cross-env HTTP_PORT=6873 stack-monitor ./src/stack.js",
    "serve:infra-updater": "cd infra/updater/stack && cross-env HTTP_PORT=6874 stack-monitor ./src/stack.js",
    "check:monorepo": "cd common/check-monorepo && npm run start",
    "check:dependencies-consistency": "check-dependency-version-consistency .",
    "check:unused": "knip",
    "check:all": "yarn check:unused && yarn check:monorepo && yarn check:dependencies-consistency",
    "ci:generate": "node ./common/workflows/src/index.js",
    "lint": "node runScriptWithEnv \"turbo run lint\"",
    "test": "node runScriptWithEnv \"turbo run test\"",
    "build": "node runScriptWithEnv \"turbo run build\"",
    "eslint": "eslint",
    "lerna": "npx lerna",
    "changed": "yarn lerna changed -pl --toposort",
    "resolve-conflicts": "cd common/workflow-conflict-resolver && node src/index.js"
  },
  "repository": "git+https://github.com/addworking/monorepo.git",
  "author": "clabroche <corentinlabroche@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/addworking/monorepo/issues"
  },
  "homepage": "https://github.com/addworking/monorepo#readme",
  "workspaces": {
    "packages": [
      "./fronts/*",
      "./common/*",
      "./servers/*"
    ]
  },
  "private": true,
  "packageManager": "yarn@4.0.2",
  "devDependencies": {
    "@clabroche/common-retrigger-all-build": "workspace:*",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@lerna-lite/changed": "^2.5.0",
    "@lerna-lite/cli": "^2.5.0",
    "@lerna-lite/diff": "^2.5.0",
    "@lerna-lite/exec": "^2.5.0",
    "@lerna-lite/list": "^2.5.0",
    "@lerna-lite/publish": "^2.5.0",
    "@lerna-lite/version": "^2.5.0",
    "@types/bluebird": "^3.5.38",
    "@types/debounce": "^1",
    "@types/jest": "^27.5.1",
    "@types/kill-port": "^2",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "bluebird": "^3.7.2",
    "chalk": "^5.3.0",
    "check-dependency-version-consistency": "^4.1.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "debounce": "^1.2.1",
    "dotenv": "^16.0.3",
    "esbuild-plugin-eslint": "^0.3.7",
    "eslint": "^8.53.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fix-esm": "^1.0.1",
    "fix-esm-candy": "^2.0.2",
    "husky": "^8.0.3",
    "kill-port": "^2.0.1",
    "knip": "^2.41.0",
    "loose-ts-check": "^2.0.0",
    "pg-native": "^3.0.1",
    "pure-rand": "^6.0.4",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "turbo": "^1.11.3",
    "typescript": "^5.2.2",
    "workspace-tools": "^0.36.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@iryu54/stack-monitor": "^1.11.23"
  }
}
